# Proxmox connection settings
proxmox_endpoint = "https://proxmox.example.com:8006"
proxmox_username = "root@pam"

# Node configuration
proxmox_node = "node1"

# VM settings
vm_id          = 100
vm_hostname    = "sap-hana"
vm_template_id = 9000  # Rocky 9 template (created by create_proxmox_template.sh)

# Resources (SAP HANA + Applications recommended minimums)
vm_disk_size = 120
vm_memory    = 32768
vm_cores     = 4

# Storage
vm_storage = "local-lvm"

# Network
network_bridge  = "vmbr0"
network_gateway = "192.168.1.1"
vm_ip_address   = "192.168.1.100/24"
vm_mac_address  = "BC:24:11:00:00:01"

# SSH keys (required)
ssh_public_keys = "ssh-rsa AAAA..."
